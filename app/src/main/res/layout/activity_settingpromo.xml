<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pomodoro.Settingpromo">

    <TextView
        android:id="@+id/pomodoro_timer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Pomodoro Timer" />

    <SeekBar
        android:id="@+id/pomodoro_timer_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/break_timer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Break Timer" />

    <SeekBar
        android:id="@+id/break_timer_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <Button
        android:id="@+id/save_button"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save" />

</LinearLayout>